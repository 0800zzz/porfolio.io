---
import "@/styles/global.css";
import Navbar from "@/components/Navbar.astro";
import Footer from "@/components/Footer.astro";

interface Props {
  title?: string;
  description?: string;
}
const { title = "porfolio.io", description = "Portfolio" } = Astro.props;
---

<html lang="es" class="!overflow-x-hidden">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
  </head>
  <body class="bg-black text-white tracking-wide !overflow-x-hidden">
    <!-- Navbar fija -->
    <header class="fixed top-0 left-0 right-0 z-[1000]">
      <Navbar />
    </header>

    <!-- padding-top para que no tape el contenido (h-14 = 56px) -->
    <main class="pt-16">
      <slot />
    </main>

    <footer class="mt-10">
      <Footer />
    </footer>
  </body>
</html>
