---
import Layout from "@/layouts/Layout.astro";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((p) => ({
    params: { slug: p.slug ?? p.id.split("/").pop() },
    props: { entry: p },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---
<Layout title={entry.data.title}>
  <section class="mx-auto max-w-3xl px-4 py-10 prose prose-invert">
    <h1 class="font-mono text-3xl text-emerald-400">{entry.data.title}</h1>
    {entry.data.pubDate && <p class="text-sm text-white/60">{new Date(entry.data.pubDate).toLocaleDateString()}</p>}
    <Content />
  </section>
</Layout>
