  <div class="max-w-6xl mx-auto px-4 h-14 flex items-center justify-between">

    <!-- Logo -->
    <a
      href={base}
      class="font-mono text-emerald-400 hover:text-emerald-300 transition"
    >
      porfolio.io
    </a>

    <!-- NAV DESKTOP -->
    <div class="hidden md:flex items-center gap-3 font-mono text-sm">
      <a class="text-white/70 hover:text-white" href={`${base}#stats`}>stats</a>
      <a class="text-white/70 hover:text-white" href={`${base}#whoami`}>whoami</a>
      <a class="text-white/70 hover:text-white" href={`${base}#writeups`}>writeups</a>
      <a class="text-white/70 hover:text-white" href={`${base}#skills`}>skills</a>
      <a class="text-white/70 hover:text-white" href={`${base}#bash`}>bash</a>
    </div>

    <!-- NAV MOBILE (reducido) -->
    <div class="flex md:hidden items-center gap-4 font-mono text-xs">
      <a class="text-white/70 hover:text-emerald-300" href={`${base}#whoami`}>
        whoami
      </a>
      <a class="text-white/70 hover:text-emerald-300" href={`${base}#writeups`}>
        writeups
      </a>
      <a class="text-white/70 hover:text-emerald-300" href={`${base}#skills`}>
        skills
      </a>
    </div>

  </div>
