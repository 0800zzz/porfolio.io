---
type Item = { label: string; value: string; hint?: string };
interface Props {
  items?: Item[];
  linkText?: string;
  linkHref?: string;
}
const {
  items = [
    { value: "10", label: "Tryhackme",      hint: "Writeups Publicados Red team" },
    { value: "7", label: "HTB",            hint: "Writeups Publicados Red team" },
    { value: "1",  label: "CyberDefenders", hint: "Writeups Publicados Blue team" },
  ],
  linkText = "[VER REPO DE WRITEUPS]",
  linkHref = "https://github.com/0800zzz/Writeups",
} = Astro.props;
---
<section class="bg-black/50 border border-emerald-400/20 rounded-lg py-8 px-4 md:px-8 relative overflow-hidden max-w-6xl mx-auto">
  <h3 class="font-mono text-emerald-400 mb-6">// Stats</h3>

  <div class="grid grid-cols-1 sm:grid-cols-3 gap-6 text-center">
    {items.map((it) => (
      <div class="select-none">
        <p class="text-3xl md:text-4xl font-extrabold text-white tracking-wide">{it.value}</p>
        <p class="text-xs text-emerald-400 uppercase mt-1">{it.label}</p>
        {it.hint && <p class="text-[11px] text-white/50 mt-1">{it.hint}</p>}
      </div>
    ))}
  </div>

  <a href={linkHref} target="_blank" rel="noopener noreferrer"
     class="mt-6 inline-block font-mono text-xs text-emerald-400 hover:underline">
    {linkText}
  </a>

  <div class="pointer-events-none absolute inset-0 ring-1 ring-emerald-400/10 rounded-lg"></div>
</section>
