---
import { ClientRouter } from "astro:transitions";
import "@/styles/global.css";
import { ABOUT_ME, SITE_TITLE } from "@/consts";
import HeroImage from "@/hero.png";

interface Props { title?: string; description?: string; image?: string; }

const base = import.meta.env.BASE_URL;
const { title = SITE_TITLE, description = ABOUT_ME, image = HeroImage.src } = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const ogImage = image.startsWith("http")
  ? image
  : new URL(image.replace(/^\/+/, ""), new URL(base, Astro.site)).toString();
---
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<meta name="generator" content={Astro.generator} />
<title>{title}</title>
<meta name="description" content={description} />

<link rel="icon" type="image/svg+xml" href="https://emoji-route.deno.dev/svg/ðŸ‘©â€ðŸ’»" />
<link rel="canonical" href={canonicalURL} />
<link rel="sitemap" href={`${base}sitemap-index.xml`} />

<!-- Ejemplo de fuente pre-cargada en /public/fonts -->
<link rel="preload" href={`${base}fonts/VCRosdNEUE.ttf`} as="font" type="font/ttf" crossorigin />

<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:url" content={canonicalURL} />
<meta property="og:image" content={ogImage} />
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={ogImage} />

<!-- Transitions (opcional) -->
<ClientRouter />
