---
import { SITE_TITLE } from "../consts";
---

<section
    class="h-screen w-full grid grid-cols-1 grid-rows-1 sm:grid-cols-2 md:grid-cols-2 gap-4"
    id="hero"
>
    <div class="grid place-items-center">
        <div class="text-center -mt-10">
            <h1 class="font-bold text-7xl">{`<${SITE_TITLE} />`}</h1>
            <h2 class="text-2xl opacity-95">{ `Programmer, Gamer, Editor and Student`}</h2>
        </div>
    </div>
    <div>
        <img alt="Hero" src="https://i.pinimg.com/originals/09/ab/87/09ab87623b048c2aaced2fccf53cfd66.png" class="brightness-200 w-full scale-90 invert" />
    </div>
</section>
