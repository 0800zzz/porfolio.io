---
interface Props { title?: string; className?: string; full_screen?: boolean; }
const { title, className, full_screen = false } = Astro.props;
---
<section class={`py-10 ${className ?? ""}`}>
  {title && (
    <h2 class="console-title mb-6">
      <span class="op">&lt;$</span>
      <span class="label"> {title} </span>
      <span class="cl">/&gt;</span>
    </h2>
  )}
  <div class={full_screen ? "w-full" : "max-w-6xl mx-auto"}>
    <slot />
  </div>
</section>
