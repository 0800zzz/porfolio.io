---
interface Props {
  href: string;
  title: string;
  excerpt?: string;
  date?: Date | string;
  className?: string;
}
const { href, title, excerpt, date, className } = Astro.props;
const formatted = date ? new Date(date).toLocaleDateString(undefined, { year: "numeric", month: "short", day: "2-digit" }) : null;
---
<a href={href} class={`group block rounded-lg border border-white/10 bg-white/5 p-4 transition hover:bg-white/10 hover:border-white/20 ${className ?? ""}`}>
  <h3 class="font-mono text-lg md:text-xl text-white tracking-wide group-hover:text-emerald-400 transition">{title}</h3>
  {excerpt && <p class="mt-2 text-sm text-white/70 leading-relaxed">{excerpt}</p>}
  {formatted && <p class="mt-3 text-xs font-mono text-white/50">{formatted}</p>}
</a>
